            <div id="translate" class="translate-button">Translate</div>

            <div id="message-field" data-text-field="main" class="enter-text-field enter-text-field-default"
                 contenteditable="true" placeholder=" Message"></div>
            <div class="send-message-button clickable">
                <svg class="chat-send-button-ico" xmlns="http://www.w3.org/2000/svg" width="16.783" height="33" viewBox="0 0 16.783 33"><title>in-send</title><polyline points="0.5 0.5 16.283 16.5 0.5 32.5" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </div>

