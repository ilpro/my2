                 viewBox="0 0 20 20">
                <path fill="none" stroke="#CCC" stroke-width="2" stroke-linecap="round" stroke-miterlimit="10"
                      d="M3 3l14 14M3 17L17 3"/>
            </svg>

            <div id="email-attachment" class="item-attach-wrapper" style="height: 50px;">

