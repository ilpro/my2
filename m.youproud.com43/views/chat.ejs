                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="15" viewBox="0 0 13 11.264">
                        <line y1="2.992" x2="8.695" y2="2.992" fill="none" stroke="gray" stroke-miterlimit="10"
                              stroke-width="2"/>
                        <polygon points="7.819 5.983 13 2.992 7.819 0 7.819 5.983" fill="gray"/>
                        <line x1="13" y1="8.273" x2="4.305" y2="8.273" fill="none" stroke="gray" stroke-miterlimit="10"
                              stroke-width="2"/>
                        <polygon points="5.181 5.281 0 8.273 5.181 11.264 5.181 5.281" fill="gray"/>
                    </svg>
                </div>
                <select id="translate-to">
                    <option value="en" selected>English</option>
                    <option value="ru">Русский</option>
                    <option value="de">Deutsch</option>
                    <option value="es">Español</option>
                    <option value="it">Italiano</option>
                    <option value="fr">Français</option>
                    <option value="ar">العربية</option>
                    <option value="zh-TW">中國</option>
                </select>
            </div>
            <div class="translator-textarea" data-text-field="translate-from" contenteditable="true"
                 placeholder="Message" style="border-bottom: solid 1px #808080;"></div>
            <div class="translator-textarea" data-text-field="secondary" contenteditable="true"
                 placeholder="Translate"></div>
        </div>
        <!--end translator-->

        <!--start attachment button-->
        <div id="attachments" class="pictures-holder" style="display: none"></div>
        <!--end attachment button-->

        <!--start send button and textfield-->
        <div class="send-box">
